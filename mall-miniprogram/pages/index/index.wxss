.container {
  padding: 20rpx;
} 

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 300rpx;
  margin: 20rpx 0;
}
.banner-img {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 推荐商品 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0 10rpx 20rpx;
}
.recommend-scroll {
  white-space: nowrap;
  padding-left: 20rpx;
}
.goods-card {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  padding: 16rpx;
  vertical-align: top;
}
.goods-img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 8rpx;
}
.goods-name {
  font-size: 26rpx;
  margin: 8rpx 0 4rpx 0;
  color: #333;
}
.goods-price {
  color: #e64340;
  font-size: 26rpx;
}
.goods-stock {
  font-size: 22rpx;
  color: #999;
}
.add-cart-btn {
  margin-top: 8rpx;
  background: #1296db;
  color: #fff;
  font-size: 24rpx;
  border-radius: 30rpx;
  padding: 8rpx 0;
}

/* 分类列表 */
.category-block {
  margin: 30rpx 0 0 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx #eee;
  padding: 16rpx 0 10rpx 0;
  position: relative;
}
.category-header {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
}
.more-btn {
  font-size: 24rpx;
  color: #1296db;
  background: none;
  border: none;
}
.more-btn-float {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 64rpx;
  height: 64rpx;
  z-index: 99;
  cursor: pointer;
}
.category-goods {
  position: relative;
  display: flex;
  flex-direction: row;
  padding: 0 20rpx;
  z-index: 1;
}
.goods-card.small {
  width: 160rpx;
  margin-right: 16rpx;
  padding: 10rpx;
}

.add-cart-img {
  width: 32px;
  height: 32px;
  display: block;
  margin: 12px auto 0 auto;
  border-radius: 50%;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  background: #fff;
  transition: transform 0.2s;
}
.add-cart-img:active {
  transform: scale(0.92);
}

.cart-bar {
  position: fixed;
  right: 24px;
  bottom: 32px;
  z-index: 100;
}
.cart-icon {
  width: 48px;
  height: 48px;
}
.cart-badge {
  position: absolute;
  top: 0;
  right: 0;
  min-width: 20px;
  height: 20px;
  background: #e54d42;
  color: #fff;
  border-radius: 10px;
  font-size: 12px;
  text-align: center;
  line-height: 20px;
  padding: 0 5px;
}
.fly-img {
  position: fixed;
  width: 32px;
  height: 32px;
  z-index: 9999;
  pointer-events: none;
  transition: all 0.7s cubic-bezier(.42,0,.58,1);
} 