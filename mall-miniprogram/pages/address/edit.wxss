.edit-container {
  padding: 32rpx;
}
.form-item {
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
}
.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333;
}
.input {
  flex: 1;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 30rpx;
  background: #fafbfc;
}
.switch-item {
  justify-content: space-between;
}
.save-btn {
  width: 100%;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin-top: 40rpx;
}
.picker-value {
  flex: 1;
  min-height: 48rpx;
  line-height: 48rpx;
  padding: 0 16rpx;
  background: #fafbfc;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  color: #333;
  font-size: 30rpx;
} 