.container {
  padding: 20rpx;
}

.cart-container { min-height: 100vh; background: #f7f7f7; }
.cart-list { max-height: 70vh; }
.cart-item { display: flex; align-items: center; background: #fff; margin: 20rpx 0; border-radius: 16rpx; box-shadow: 0 2rpx 8rpx #eee; padding: 20rpx; }
.cart-checkbox { margin-right: 20rpx; }
.cart-img { width: 120rpx; height: 120rpx; border-radius: 8rpx; background: #f2f2f2; }
.cart-info { flex: 1; margin-left: 20rpx; }
.cart-title { font-size: 32rpx; font-weight: 500; color: #222; }
.cart-price { color: #e64340; font-size: 28rpx; margin: 10rpx 0; }
.cart-ctrl { display: flex; align-items: center; }
.num-btn { min-width: 48rpx; height: 48rpx; line-height: 48rpx; text-align: center; }
.cart-num { margin: 0 16rpx; font-size: 28rpx; }
.cart-delete { color: #888; font-size: 24rpx; margin-left: 20rpx; }
.cart-footer { position: fixed; left: 0; right: 0; bottom: 0; background: #fff; display: flex; align-items: center; justify-content: space-between; padding: 20rpx 32rpx; box-shadow: 0 -2rpx 8rpx #eee; }
.footer-left { display: flex; align-items: center; }
.footer-mid { flex: 1; text-align: right; font-size: 28rpx; color: #222; }
.total-price { color: #e64340; font-weight: 600; }
.footer-btn { margin-left: 32rpx; min-width: 180rpx; }
.cart-empty { text-align: center; color: #bbb; font-size: 32rpx; margin-top: 200rpx; } 